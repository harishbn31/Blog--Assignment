<h2> Listing Categories </h2>

<% if @categories.empty? %>
  <p>No categories found </p>
<% else %>
  <ul>
    <% @categories.each do |category| %>
      <li><%= link_to category.name, category_path(category.id) %>
      <% if  user_signed_in? %> 
       <%= link_to "delete", category_path(category.id), method: :delete, data: {confirm: "Are you sure?"} %></li>
       <%end %>
    <% end %>
  </ul>

<% end %>
<%if user_signed_in?  %>
<%= link_to "Add Category", new_category_path %>
<%end%>
<%= link_to "New article", new_article_path %>
