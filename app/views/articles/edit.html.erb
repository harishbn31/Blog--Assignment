<h2>Edit article</h2>

<%= form_for @article do |a| %>

	<label>Title : </label><br/>
	<%= a.text_field :title, placeholder: "Enter the article name", autofocus: true %><br/><br/>
	<label>Body : </label><br/>
	<%= a.text_area :body, placeholder: "Enter the body" %><br/><br/>

	<label>Category_id : </label><br/>
	<%= a.collection_select :category_id, Category.all, :id, :name, prompt: "Select category" %><br/><br/>
	<label>Published date :</label><br/>
	<%= a.date_field :published_date%><br/><br/>

	<%= a.submit %>

<% end %>
